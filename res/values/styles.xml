<?xml version="1.0" encoding="utf-8"?>
<resources>

	<style name="ContentDivider">
		<item name="android:background">@android:drawable/divider_horizontal_dark</item>
	</style>

	<style name="TopBar">
		 <item name="android:background">@android:drawable/bottom_bar</item>
	</style>

	<style name="BottomBar">
		 <item name="android:background">@android:drawable/bottom_bar</item>
	</style>
	
	<style name="MessageCharCounter">
		<item name="android:textSize">11sp</item>
	</style>
	
	<style name="MessageRoutingButton">
		<item name="android:background">@android:drawable/btn_default</item>
	</style>
	
	<style name="RecipientsToText">
		<item name="android:textColor">@color/foreground_text</item>
	</style>
	
	<style name="RecipientsAddButton">
		<item name="android:background">@null</item>
		<item name="android:src">@drawable/sym_action_add_dark</item>
	</style>
	
	<style name="ContactListGroupItem">
		<item name="android:textColor">@color/list_item_text</item>
		<item name="android:textSize">18sp</item>
	</style>
	
	<style name="ContactListGroupItemBackground">
		<item name="android:background">@android:drawable/list_selector_background</item>
		<item name="android:paddingTop">5dp</item>
		<item name="android:paddingBottom">5dp</item>
		<item name="android:paddingLeft">?android:attr/expandableListPreferredItemPaddingLeft</item>
		<item name="android:paddingRight">10dp</item>
	</style>
	
	<style name="ContactListItemName">
		<item name="android:textColor">@color/list_item_text</item>
		<item name="android:textSize">18sp</item>
	</style>
	
	<style name="ContactListItemNumber">
		<item name="android:textColor">@color/list_item_text</item>
		<item name="android:textSize">13sp</item>
	</style>

	<style name="ConversationListHeader">
		<item name="android:background">@drawable/action_bar</item>
		<item name="android:paddingLeft">12dp</item>
		<item name="android:minHeight">48dp</item>
	</style>

	<style name="ConversationListNewMessage">
		<item name="android:background">@drawable/list_button_background_left</item>
	</style>

	<style name="ConversationListFriends">
		<item name="android:background">@drawable/list_button_background_right</item>
	</style>
	
	<style name="ConversationListItemDate">
		<item name="android:textColor">@color/list_item_text</item>
		<item name="android:textSize">13sp</item>
	</style>
	<style name="ConversationListItemName">
		<item name="android:textColor">@color/list_item_text</item>
		<item name="android:textSize">18sp</item>
	</style>
	<style name="ConversationListItemDraft">
		<item name="android:textColor">@color/blue_text</item>
		<item name="android:textSize">11sp</item>
	</style>
	<style name="ConversationListItemSnippet">
		<item name="android:textColor">@color/list_item_text</item>
		<item name="android:textSize">13sp</item>
	</style>
	
	<style name="MessageListGroupHeader">
		<item name="android:background">@android:drawable/title_bar</item>
		<item name="android:textColor">@color/foreground_text</item>
	</style>
	<style name="MessageListGroupHeader.Bubble">
		<item name="android:background">@android:color/transparent</item>
		<item name="android:shadowColor">#80000000</item>
		<item name="android:textSize">13sp</item>
		<item name="android:textStyle">bold</item>
		<item name="android:gravity">center</item>
	</style>
	
	<style name="MessageListItemText">
		<item name="android:textColor">@color/list_item_text</item>
		<item name="android:textSize">13sp</item>
	</style>
	<style name="MessageListItemText.Bubble">
		<item name="android:textColor">@color/foreground_inverse_text</item>
		<item name="android:textSize">13sp</item>
	</style>
	
	<style name="FriendsInviteButton">
		<item name="android:background">@drawable/dark_header_dither</item>
	</style>
	<style name="FriendsInviteHeader">
		<item name="android:textColor">@color/list_item_text</item>
		<item name="android:textSize">13sp</item>
		<item name="android:textStyle">bold</item>
	</style>
	<style name="FriendsInviteText">
		<item name="android:textColor">@color/list_item_text</item>
		<item name="android:textSize">12sp</item>
	</style>
	
	<style name="FriendsListItemName">
		<item name="android:textColor">@color/list_item_text</item>
		<item name="android:textSize">18sp</item>
	</style>
	<style name="FriendsListItemMsisdn">
		<item name="android:textColor">@color/list_item_text</item>
		<item name="android:textSize">13sp</item>
	</style>
	<style name="FriendsListInfo">
		<item name="android:background">@drawable/dark_header_dither</item>
	</style>
	
	<style name="MessageSendButton">
	    <item name="android:textColor">#ffffff</item>
	</style>
	
	<style name="NotifyPopupName">
		<item name="android:textSize">18sp</item>
	</style>
	
	<style name="NotifyPopupDate">
		<item name="android:textSize">13sp</item>
	</style>
	
	<style name="NotifyPopupText">
		<item name="android:textSize">13sp</item>
	</style>
	
	<style name="NotifyPopupUnread">
	</style>
	
	<style name="DialogHeader">
		<item name="android:background">@drawable/dark_header_dither</item>
		<item name="android:paddingLeft">10dp</item>
		<item name="android:textColor">@color/foreground_dim_text</item>
	</style>
	
	<style name="Widget.ListView.MessageList.Bubble" parent="android:style/Widget.ListView">
		<item name="android:listSelector">@drawable/list_selector_background_transparent</item>
	</style>
	
</resources>
